@using Microsoft.AspNetCore.Identity
@using WebShop.Dal.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <div class="d-inline">Hello @UserManager.GetUserName(User)!</div>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Felhasználó">
                    <img class="navbar-icon" border="0" alt="UserLogo" src="~/images/logos/user_logo.png" />
                </a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }

        <li class="nav-item">
            <a asp-controller="Item" asp-action="GetItemById" asp-route-id="10000000-0000-0000-0000-000000000000">ASD>
                <img class="navbar-icon" border="0" alt="PcBuilderLogo" src="~/images/logos/builder.png" />
            </a>
        </li>


    </ul>
